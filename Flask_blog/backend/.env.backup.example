# 物理备份引擎配置示例

# MySQL容器名称
MYSQL_CONTAINER_NAME=blog-mysql

# MySQL数据卷名称
# 使用 'auto-detect' 自动检测，或指定具体卷名/卷ID
MYSQL_VOLUME_NAME=auto-detect

# 物理备份存储根目录
PHYSICAL_BACKUP_ROOT=./backups/physical

# 是否启用热备份（默认: True）
PHYSICAL_HOT_BACKUP=True

# 是否启用备份压缩（默认: True）
PHYSICAL_COMPRESS_BACKUP=True

# 物理恢复引擎配置
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3307
MYSQL_USER=root
MYSQL_PASSWORD=root
MYSQL_DATABASE=blog